{ "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "title": {
      "text": ["Difference between Men's and Women's Team Performance", "vs Economic Development"],
      "subtitle":["HDI (x), Percentage Difference between, Men's and", "Women's FIFA Ranking Points (y). 2021 Data"],
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },

  "config": {
    "background":"white",
    "view": {
      "stroke": "transparent"}},
  
    "data": {
      "url": "https://raw.githubusercontent.com/vikrajendran/vikrajendran.github.io/main/HDIPercentD.csv",
      "format":{"type":"csv"}},
  
    "mark": {
      "type":"circle",
      "color":"#28ACEA",
      "opacity":0.7},
    
    "height": 300,
    "width": 300,
  
    "encoding": {
      "x": {
        "field": "2021 HDI", 
        "type": "quantitative",
        "scale": {"domain": [0.3, 1]},
        "axis":{"grid": false},
        "title":null},
  
      "y": {
        "field": "%Diff", 
        "type": "quantitative",
        "scale": {"domain": [-60, 70]},
        "axis":{"grid": false},
        "title":null},

              "tooltip":[
        {"field":"Country Name", "type": "ordinal", "title":"Country"},
        {"field":"%Diff", "type": "quantitative", "title":"Percentage Difference", "format":".0f"},
        {"field":"2021 HDI", "type": "quantitative", "title":"HDI", "format":".2f"},
              ]
  
      
    }
}
